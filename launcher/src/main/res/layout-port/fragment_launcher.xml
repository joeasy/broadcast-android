<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:paddingTop="10dp"
             android:paddingBottom="10dp"
             android:paddingLeft="20dp"
             android:paddingRight="20dp"
             tools:context="com.nbplus.vbroadlauncher.fragment.LauncherFragment">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/launcher_top_layer_height">
        <TextView
            android:id="@+id/launcher_village_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/launcher_village_name"
            android:textStyle="bold|normal"
            android:lines="1"
            android:ellipsize="end"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            />
        <Button
            android:id="@+id/btn_show_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/btn_show_map"
            android:textColor="@color/white"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_menu_white_48dp"/>
        <Button
            android:id="@+id/btn_show_apps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/btn_show_apps"
            android:textColor="@color/white"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_apps_white_48dp"/>

    </LinearLayout>

    <!-- launcher main layer -->
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1">
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <org.basdroid.widget.TextClock
                android:id="@+id/text_clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/launcher_clock_size" />

        </LinearLayout>
        <!-- right : service shortcuts... etc -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.nbplus.vbroadlauncher.widget.IButton
                    xmlns:imagebutton="http://schemas.android.com/apk/res-auto"
                    android:clickable="true"
                    android:id="@+id/shortcut_btn_emergency_call"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/launcher_shortcut_background_blue"
                    imagebutton:button_text="@string/shortcut_btn_emergency_call"
                    imagebutton:button_icon="@drawable/ic_launcher"
                    />
                <Button
                    android:id="@+id/shortcut_btn_emergency_call_xx"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:background="@drawable/launcher_shortcut_background_blue"
                    android:drawableTop="@drawable/ic_launcher"
                    android:text="@string/shortcut_btn_emergency_call"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/launcher_shortcut_font_size" />

                <Button
                    android:id="@+id/shortcut_btn_new_broadcast"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:background="@drawable/launcher_shortcut_background_black"
                    android:drawableTop="@drawable/ic_launcher"
                    android:textStyle="bold"
                    android:text="@string/shortcut_btn_new_broadcast"
                    android:textColor="@color/white"
                    android:textSize="@dimen/launcher_shortcut_font_size" />
                <Button
                    android:id="@+id/shortcut_btn_new_participation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/launcher_shortcut_background_blue"
                    android:drawableTop="@drawable/ic_launcher"
                    android:text="@string/shortcut_btn_new_participation"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/launcher_shortcut_font_size" />
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/shortcut_btn_my_settings"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/launcher_shortcut_background_black"
                    android:drawableTop="@drawable/ic_launcher"
                    android:text="@string/shortcut_btn_my_settings"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/launcher_shortcut_font_size" />

                <Button
                    android:id="@+id/shortcut_btn_additional_function"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/launcher_shortcut_background_blue"
                    android:drawableTop="@drawable/ic_launcher"
                    android:text="@string/shortcut_btn_additional_function"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/launcher_shortcut_font_size" />
                <Button
                    android:id="@+id/shortcut_btn_radio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/launcher_shortcut_background_black"
                    android:drawableTop="@drawable/ic_launcher"
                    android:text="@string/shortcut_btn_radio"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/launcher_shortcut_font_size" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:paddingTop="10dp"
             android:paddingBottom="10dp"
             android:paddingLeft="20dp"
             android:paddingRight="20dp"
             tools:context="com.nbplus.vbroadlauncher.fragment.LauncherFragment">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/launcher_top_layer_height">
        <TextView
            android:id="@+id/launcher_village_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/launcher_village_name"
            android:textStyle="bold|normal"
            android:lines="1"
            android:ellipsize="end"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            />
        <Button
            android:id="@+id/btn_show_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/btn_show_map"
            android:textColor="@color/white"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_menu_white_48dp"/>
        <Button
            android:id="@+id/btn_show_apps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/btn_show_apps"
            android:textColor="@color/white"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_apps_white_48dp"/>

    </LinearLayout>

    <!-- launcher main layer -->
    <LinearLayout
        android:id="@+id/main_view_layout"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/launcher_top_layer_margin"
        android:layout_weight="1">
        <!-- left : clock, weather and calendar etc -->
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- TODO : for test -->
            <TextView
                android:id="@+id/location_update"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <!-- end of TODO -->

            <com.nbplus.vbroadlauncher.widget.TextClock
                android:id="@+id/text_clock"
                android:layout_weight=".6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/launcher_clock_size" />

            <com.nbplus.vbroadlauncher.widget.WeatherView
                android:layout_weight=".4"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
        <!-- right : service shortcuts... etc -->
        <android.support.v7.widget.GridLayout
            xmlns:grid="http://schemas.android.com/apk/res-auto"

            android:id="@+id/shortcut_grid"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"

            grid:alignmentMode="alignBounds"
            grid:columnCount="3"
            grid:rowOrderPreserved="false"
            grid:useDefaultMargins="true">

        </android.support.v7.widget.GridLayout>
    </LinearLayout>

</LinearLayout>

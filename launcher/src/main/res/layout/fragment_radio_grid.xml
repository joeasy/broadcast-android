<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <GridView
        android:id="@+id/grid_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="@dimen/radio_view_horizontal_padding"
        android:paddingRight="@dimen/radio_view_horizontal_padding"
        android:verticalSpacing="@dimen/radio_grid_vertical_cellspacing"
        android:horizontalSpacing="@dimen/radio_grid_horizontal_cellspacing"
        android:listSelector="@android:color/transparent"
        android:stretchMode="columnWidth"
        android:numColumns="@integer/radio_grid_numcolumns"
        />

    <LinearLayout
        android:id="@+id/empty_list_view"
        android:gravity="center"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/weather_current_title_font_size"
            android:textAlignment="center"
            android:textStyle="bold"
            android:lines="1"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:ellipsize="end"
            android:text="@string/empty_radio_channel_list"
            />
    </LinearLayout>
</FrameLayout>

<resources>

    <style name="FullScreenDialog" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <style name="NBPlusTheme" parent="Theme.AppCompat.Light.DarkActionBar" >
    </style>

    <style name="NBPlusTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>
    <style name="NBPlusTheme.NoActionBar.Translucent" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>
    <style name="NBPlusTheme.NoActionBar.TranslucentDecor" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <!--<item name="android:windowAnimationStyle">@android:style/Animation</item>-->

        <!--<item name="windowActionBar">false</item>--> <!-- For 2.x version  -->
    </style>

    <style name="NBPlusTheme.WallPager.NoActionBar.TranslucentDecor" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="windowActionBar">false</item>--> <!-- For 2.x version  -->
    </style>

</resources>
